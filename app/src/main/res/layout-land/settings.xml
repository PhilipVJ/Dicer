<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/settings"
        android:textSize="30sp" />

    <GridLayout
        android:layout_width="275dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:rowCount="4">

        <TextView
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center|left"
            android:text="@string/changeBackgroundColor"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/darkThemeCheckBox"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center|left"
            android:text="@string/shakeOrNot"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/shakeCheckBox"
            android:layout_height="50dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="right"/>
        <TextView
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="0"
            android:gravity="center|left"
            android:text="@string/activateEnglish"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/activateEnglishCheckBox"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/chanceLabel"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="0"
            android:gravity="center|left"
            android:text="@string/chanceOfSix"
            android:textSize="15sp"
            android:visibility="invisible"
            />

        <EditText
            android:id="@+id/chanceInput"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:inputType="number"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_gravity="right"
            />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/cancelSettingsBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/saveSettingsBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/save" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/secretBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>